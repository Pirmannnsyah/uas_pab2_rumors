<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ResetPasswordActivity">

    <TextView
        android:id="@+id/tv_titlelupapassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_semibold"
        android:letterSpacing="0.05"
        android:text="Lupa Password"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        android:textColor="#263159"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_Lpassword"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="4dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_titlelupapassword"
        app:strokeColor="#8A8A8A"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reset_pw"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_medium"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/costum_et"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="12dp"
                android:drawableTint="#626161"
                android:hint="Masukan Email"
                android:padding="8dp"
                android:textSize="14sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/btn_resetpassowrd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Reset Password"
        android:fontFamily="@font/opensans_medium"
        android:background="@drawable/costum_btn"
        android:textSize="14sp"
        android:letterSpacing="0.2"
        android:textAllCaps="false"
        android:minHeight="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_Lpassword" />

    <TextView
        android:id="@+id/tv_sublpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ingat password?"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/opensans_regular"
        android:layout_marginStart="100dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_resetpassowrd" />

    <TextView
        android:id="@+id/tv_buatmasukt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="-3dp"
        android:textSize="16sp"
        android:text="masuk"
        android:fontFamily="@font/opensans_semibold"
        android:textColor="#263159"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/tv_sublpassword"
        app:layout_constraintTop_toTopOf="@+id/tv_sublpassword" />

</androidx.constraintlayout.widget.ConstraintLayout>